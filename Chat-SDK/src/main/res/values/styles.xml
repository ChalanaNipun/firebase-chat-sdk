<resources>



    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RoundedEditTextStyle">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxHeight">150dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>

    </style>


    <style name="chatMessageTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="emptyChatMessageStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>


    <style name="chatTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>

    <style name="userStatusStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>

    <style name="chatDeliveryTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>