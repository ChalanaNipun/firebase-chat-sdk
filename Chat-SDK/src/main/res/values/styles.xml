<resources>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FloatingDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="RoundedEditTextStyle">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxHeight">150dp</item>
        <item name="android:maxLines">5</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>

    </style>


    <style name="receivedMessageTextStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/chat_sender_text_color</item>
    </style>

    <style name="emptyChatMessageStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>


    <style name="chatTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>

    <style name="userStatusStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>





    <style name="bottomStyle">
        <item name="android:background">@drawable/footer_shape</item>
        <item name="android:elevation">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="senderFirstLatterStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/chat_header_color</item>
    </style>


    <!--    receive bubble customizations-->

    <!--    //Main Layout -->
    <style name="receivedBubbleStyle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/chat_receiver_bubble</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!--        <item name="android:elevation">5dp</item>-->
    </style>

    <!--    //Inner Layout (After main)-->
    <style name="receiveOuterLayoutStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!--    //sent textview style-->
    <style name="receiveMessageTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/chat_sender_text_color</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <!--    //delivery layout style-->
    <style name="receiveMessageDeliveryLayoutStyle">
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!--    //delivery textview style-->
    <style name="chatDeliveryTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/chat_receiver_hint_color</item>
    </style>


    <!--    //sent bubble customizations-->
    <style name="sentBubbleStyle">
        <item name="android:background">@drawable/chat_sender_bubble</item>
        <item name="android:gravity">center|end</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:layout_margin">2dp</item>
        <!--        <item name="android:elevation">5dp</item>-->
    </style>


    <!--    //Inner Layout (After main)-->
    <style name="sentOuterLayoutStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!--    //delivery layout style-->
    <style name="sentMessageDeliveryLayoutStyle">
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <style name="floatingIconStyle">
        <item name="android:gravity">bottom|end</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/send_icon</item>

    </style>

    <style name="floatingButtonStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:layout_marginEnd">10dp</item>

    </style>

    <style name="floatingBadgeStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:background">@drawable/ic_filled_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>

    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <!--        <item name="android:background">@drawable/card_top_corner_radius</item>-->
        <!--        <item name="android:windowBackground">@null</item>-->
        <!--        <item name="android:fillViewport">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <!--        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>-->
    </style>


    <style name="headerLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/chat_header_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="elevation">10dp</item>
    </style>


    <style name="headerImageStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="messageButtonStyle">

    </style>

</resources>